<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout       
     xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:orientation="vertical"
        android:background="#fff">
        

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check PNR"
            android:id="@+id/pnr_button"
            android:layout_below="@+id/editText"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:background="#5492ff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignRight="@+id/editText"
            android:layout_alignLeft="@+id/editText"/>

    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/pnr_inner_relative"
            android:layout_below="@+id/pnr_button">


    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="W/L 4, PQWL"
            android:id="@+id/booking_status_view"
            android:padding="10dp"
            android:textSize="30dp"
            android:layout_below="@+id/pnr_inner_relative"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="24dp"
            android:textColor="#426dab"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MADURAI EXPRESS"
            android:id="@+id/textView"
            android:layout_below="@+id/train_no_view"
            android:layout_alignRight="@+id/train_no_view"
            android:textColor="#989898"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12345"
            android:id="@+id/train_no_view"
            android:textColor="#969696"
            android:layout_below="@+id/booking_status_view"
            android:layout_toLeftOf="@+id/imageView2"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_next_item"
            android:layout_below="@+id/booking_status_view"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="From"
            android:id="@+id/textView2"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/train_no_view"
            android:textColor="#4d4d4d"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Chennai Egmore"
            android:id="@+id/from_view"
            android:singleLine="true"
            android:textColor="#5492ff"
            android:maxLines = "3"
            android:scrollbars = "vertical"
            android:layout_below="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_toRightOf="@+id/pnr_inner_relative"
            android:gravity="right"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="To"
            android:id="@+id/textView4"
            android:textColor="#4d4d4d"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignRight="@+id/imageView2"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dindigul Junction"
            android:maxLines = "3"
            android:scrollbars = "vertical"
            android:id="@+id/to_view"
            android:layout_below="@+id/textView4"
            android:singleLine="true"
            android:layout_alignLeft="@+id/textView4"
            android:textColor="#5492ff"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(MS)"
            android:id="@+id/textView6"
            android:layout_below="@+id/from_view"
            android:layout_alignRight="@+id/from_view"
            android:textColor="#b8b8b8"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(DG)"
            android:id="@+id/textView7"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignLeft="@+id/to_view"
            android:textColor="#b8b8b8"/>

</RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#5492ff"
            android:text="Passenger Details"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />
        
        <ListView
            android:id="@+id/passengers_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_text">
            
            
        </ListView>

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>